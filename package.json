    "chokidar": "^3.5.3",
    "sqlite3": "^5.1.6",
    "glob": "^10.3.10",
    "dotenv": "^16.3.1",
    "yaml": "^2.3.4",
    "winston": "^3.11.0",
    "crypto-js": "^4.2.0",
    "node-fetch": "^3.3.2",
    "semver": "^7.5.4"
